<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => "form-horizontal prevent_double_submit ajax-form   no_content_form",
        :id => "new_object"}) do |f| %>

  <%= f.input :name  , :input_html => {:class => "input-xlarge span5"}, 
  :label => "Name" %>

  <%= f.input :description , :input_html => {:class => "input-xlarge span5", :rows => 5}, 
  :label => "Description" %>
  <hr />
  <%= f.input :has_sub_item , :input_html => {:class => "input-xlarge span5", :rows => 5}, 
  :label => "Has Sub Item?" %>
  
  <%= f.input :sub_item_name , :input_html => {:class => "input-xlarge span5", :rows => 5}, 
  :label => "Sub Item Name" %>
  
  <%= f.input :sub_item_quantity , :input_html => {:class => "input-xlarge span5", :rows => 5}, 
  :label => "Sub Item Quantity " %>

  <div class="form-actions">
    <%= f.button :submit , :class => "btn btn-primary", :value=> "Create Package" %>
  </div>
<% end %>

 