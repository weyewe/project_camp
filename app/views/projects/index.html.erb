<div class="padded">
  
  
  <% if  current_user.has_role?(:head_project_manager)%>
    <%= render :partial => "layouts/new_object_opener", :locals => {
      :text => "New Project"
    } %>
  <% end %>
  
  
   
  <% if @projects.length == 0 %>
    <%= render :partial => "layouts/no_object_list", :locals => {
      :objects => "active projects",
      :single_object => "project" , 
      :subject => "company"
    } %>
  <% end %>
   
   
  <% if  current_user.has_role?(:head_project_manager)%>
    <%= render :partial => "projects/new_object_form", :locals => {
      :new_object => @new_project,
      :url => projects_url  
    }%>
  <% end %>
 
 
 
  
  
  
    
    <table class="table table-bordered table-striped table-header <%= show_table?( @projects )%>" id="object_list">
      <thead>
        <tr>
          <th>Title</th>
          <th>Deadline</th>
          <th>Deliverables</th>
          <th>Membership</th>
          <th>Concept</th> 
          <th>Shoot Data</th> 
          <th>Production</th>
          <th>Post Production</th>
        </tr>
      </thead>
      <tbody id="package_list">
        <% @projects.each do |project| %>
          <%= render :partial => "projects/object_list_entry", :locals => {
            :object => project 
          }%>
        
        <% end %> 
      </tbody>
    </table>
</div>