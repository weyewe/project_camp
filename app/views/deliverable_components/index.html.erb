<div class="padded">
  
  <%= render :partial => "layouts/new_object_opener", :locals => {
    :text => "New Deliverable Component"
  } %>
  
  
   
  <% if @deliverable_components.length == 0 %>
    <%= render :partial => "layouts/no_object_list", :locals => {
      :objects => "deliverable components",
      :single_object => "deliverable component",
      :subject => "company" 
    } %>
  <% end %>
   
   
  <%= render :partial => "deliverable_components/new_object_form", :locals => {
    :new_object => @new_deliverable_component,
    :url => deliverable_deliverable_components_url(@deliverable)  
  }%>
 
   
  
    <table class="table table-bordered table-striped table-header <%= show_table?( @deliverable_components )%>"
       id="object_list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th> 
        </tr>
      </thead>
      <tbody id="package_list">
        <% @deliverable_components.each do |deliverable_component| %>
          <%= render :partial => "deliverable_components/object_list_entry", :locals => {
            :object => deliverable_component 
          }%>
        
        <% end %> 
      </tbody>
    </table>
</div>